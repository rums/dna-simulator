<UserControl x:Class="dna_simulator.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ignore="http://www.ignore.com"
             xmlns:view="clr-namespace:dna_simulator.View"
             mc:Ignorable="d ignore">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border BorderBrush="#FFF38630" BorderThickness="2" Margin="10" Padding="10" CornerRadius="5">

        <Grid x:Name="LayoutRoot" Margin="-2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <view:SingleTileControl DataContext="{Binding SingleTileViewModel, Source={StaticResource Locator}}" />
            <view:MultiTileControl Grid.Column="1" Width="Auto" DataContext="{Binding MultiTileViewModel, Source={StaticResource Locator}}" />
        </Grid>
    </Border>
</UserControl>