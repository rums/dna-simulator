<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:dna_simulator.View"
    xmlns:atam="clr-namespace:dna_simulator.ViewModel.Atam"
    x:Class="dna_simulator.View.MainPage"
    x:Name="AtamConfig"
    mc:Ignorable="d"
    d:DesignHeight="505" d:DesignWidth="703" Width="Auto" Height="Auto">

    <UserControl.DataContext>
        <atam:AtamConfig />
    </UserControl.DataContext>

    <Border BorderBrush="#FFF38630" BorderThickness="2" Margin="10" Padding="10" CornerRadius="5">

        <Grid x:Name="LayoutRoot" Margin="-2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <view:SingleTileControl />
            <view:MultiTileControl Grid.Column="1" Width="Auto" />
        </Grid>
    </Border>
</UserControl>