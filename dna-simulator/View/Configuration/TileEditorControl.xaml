<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
	xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
	xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:innerProduct="clr-namespace:InnerProduct;assembly=ColorPicker"
    xmlns:confv="clr-namespace:dna_simulator.View.Configuration"
    xmlns:atam="clr-namespace:dna_simulator.ViewModel.Atam"
    mc:Ignorable="d"
	x:Class="dna_simulator.View.Configuration.TileEditorControl"
	d:DesignWidth="640" d:DesignHeight="480">

    <UserControl.Resources>
        <innerProduct:ColorToBrush x:Key="ColorToBrush" />

        <DataTemplate DataType="atam:TileTypeVm">
            <Viewbox x:Name="TileViewbox" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Background="Transparent" x:Name="Tile">
                    <TextBox x:Name="TileLabel" TextWrapping="Wrap" Text="{Binding Label, FallbackValue=Tile label, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Center" BorderBrush="{x:Null}" Background="{x:Null}" Canvas.ZIndex="1" />
                    <Path x:Name="TileTop" Data="M43,63 L150.075,63" Height="2" Stretch="Fill" StrokeThickness="2" UseLayoutRounding="False" VerticalAlignment="Top" Canvas.ZIndex="1" Stroke="{Binding TopEdges[0].DisplayColor, Converter={StaticResource ColorToBrush}}" />
                    <Path x:Name="TileBottom" Data="M28,52 L80.0096,52" Height="2" Stretch="Fill" StrokeThickness="2" UseLayoutRounding="False" VerticalAlignment="Bottom" Canvas.ZIndex="1" Stroke="{Binding BottomEdges[0].DisplayColor, Converter={StaticResource ColorToBrush}}" />
                    <Path x:Name="TileLeft" Data="M38,25 L38,75.04" HorizontalAlignment="Left" Stretch="Fill" StrokeThickness="2" UseLayoutRounding="False" Width="2" Canvas.ZIndex="1" Stroke="{Binding LeftEdges[0].DisplayColor, Converter={StaticResource ColorToBrush}}" />
                    <Path x:Name="TileRight" Data="M149,100 L150,200" Stretch="Fill" StrokeThickness="2" UseLayoutRounding="False" Width="3" HorizontalAlignment="Right" Canvas.ZIndex="1" Stroke="{Binding RightEdges[0].DisplayColor, Converter={StaticResource ColorToBrush}}" />
                    <ed:RegularPolygon x:Name="TopControl" Fill="{Binding Stroke, ElementName=TileTop}" InnerRadius="1" Opacity="0" PointCount="3" RenderTransformOrigin="0.5,0.5" Stretch="Fill" UseLayoutRounding="False" Height="100" Width="200" Margin="0,0,0,100">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeave">
                                <ei:ChangePropertyAction x:Name="MouseLeaveOpacity" PropertyName="Opacity" Value="0" />
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseEnter">
                                <ei:ChangePropertyAction x:Name="MouseEnterOpacity" PropertyName="Opacity" Value="0.1" />
                                <ei:ChangePropertyAction TargetName="TopEdgeOptions" TargetObject="{Binding ElementName=TopEdgeOptions}" PropertyName="Visibility" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ed:RegularPolygon.RenderTransform>
                            <CompositeTransform ScaleY="-1" />
                        </ed:RegularPolygon.RenderTransform>
                    </ed:RegularPolygon>
                    <ed:RegularPolygon x:Name="BottomControl" Height="100" InnerRadius="1" Margin="0" PointCount="3" Stretch="Fill" UseLayoutRounding="False" VerticalAlignment="Bottom" Width="200" RenderTransformOrigin="0.5,0.5" Fill="{Binding Stroke, ElementName=TileBottom}" HorizontalAlignment="Center" Opacity="0">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeave">
                                <ei:ChangePropertyAction PropertyName="Opacity" Value="0" />
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseEnter">
                                <ei:ChangePropertyAction PropertyName="Opacity" Value="0.1" />
                                <ei:ChangePropertyAction x:Name="SetBottomMenuOptions" TargetName="BottomEdgeOptions" TargetObject="{Binding ElementName=BottomEdgeOptions}" PropertyName="Visibility" />
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseLeftButtonUp" />
                        </i:Interaction.Triggers>
                        <ed:RegularPolygon.RenderTransform>
                            <CompositeTransform />
                        </ed:RegularPolygon.RenderTransform>
                    </ed:RegularPolygon>
                    <ed:RegularPolygon x:Name="LeftControl" Height="100" InnerRadius="1" Margin="-50,0,0,0" PointCount="3" Stretch="Fill" UseLayoutRounding="False" VerticalAlignment="Center" Width="200" RenderTransformOrigin="0.5,0.5" Fill="{Binding Stroke, ElementName=TileLeft}" HorizontalAlignment="Left" Opacity="0">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeave">
                                <ei:ChangePropertyAction PropertyName="Opacity" Value="0" />
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseEnter">
                                <ei:ChangePropertyAction PropertyName="Opacity" Value="0.1" />
                                <ei:ChangePropertyAction x:Name="SetLeftMenuOptions" TargetName="LeftEdgeOptions" TargetObject="{Binding ElementName=LeftEdgeOptions}" PropertyName="Visibility" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ed:RegularPolygon.RenderTransform>
                            <CompositeTransform Rotation="90" />
                        </ed:RegularPolygon.RenderTransform>
                    </ed:RegularPolygon>
                    <ed:RegularPolygon x:Name="RightControl" Height="100" InnerRadius="1" Margin="0,0,-50,0" PointCount="3" Stretch="Fill" UseLayoutRounding="False" VerticalAlignment="Center" Width="200" RenderTransformOrigin="0.5,0.5" Fill="{Binding Stroke, ElementName=TileRight}" HorizontalAlignment="Right" Opacity="0">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeave">
                                <ei:ChangePropertyAction PropertyName="Opacity" Value="0" />
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseEnter">
                                <ei:ChangePropertyAction PropertyName="Opacity" Value="0.1" />
                                <ei:ChangePropertyAction x:Name="SetRightMenuOptions" TargetName="RightEdgeOptions" TargetObject="{Binding ElementName=RightEdgeOptions}" PropertyName="Visibility" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ed:RegularPolygon.RenderTransform>
                            <CompositeTransform Rotation="-90" />
                        </ed:RegularPolygon.RenderTransform>
                    </ed:RegularPolygon>
                </Grid>
            </Viewbox>
        </DataTemplate>

        <DataTemplate DataType="atam:GlueVm">
            <confv:GlueEditorControl />
        </DataTemplate>

        <DataTemplate x:Key="EdgeItemTemplate" DataType="atam:GlueVm">
            <Grid x:Name="EdgeItem">
                <Grid.Background>
                    <SolidColorBrush Color="{Binding DisplayColor}" Opacity="0.25"></SolidColorBrush>
                </Grid.Background>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseEnter">
                        <ei:ChangePropertyAction PropertyName="Background">
                            <ei:ChangePropertyAction.Value>
                                <SolidColorBrush Color="{Binding DisplayColor}" Opacity="0.75"></SolidColorBrush>
                            </ei:ChangePropertyAction.Value>
                        </ei:ChangePropertyAction>
                        <i:InvokeCommandAction CommandParameter="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType=ListBoxItem}}" Command="{Binding MainViewModel.CurrentViewModel.ConfigureEdgeCommand, Source={StaticResource Locator}}" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="MouseLeave">
                        <ei:ChangePropertyAction PropertyName="Background">
                            <ei:ChangePropertyAction.Value>
                                <SolidColorBrush Color="{Binding DisplayColor}" Opacity="0.25"></SolidColorBrush>
                            </ei:ChangePropertyAction.Value>
                        </ei:ChangePropertyAction>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <TextBlock Margin="4,4,4,4" Text="{Binding Label}" />
            </Grid>
        </DataTemplate>

        <Style x:Key="IgnoreMouseOverItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="3" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Top" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="TabNavigation" Value="Local" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid Background="{TemplateBinding Background}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="MouseOver">
                                        <!--<Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="fillColor" Storyboard.TargetProperty="Opacity" Duration="0" To=".35"/>
                                        </Storyboard>-->
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="contentPresenter" Storyboard.TargetProperty="Opacity" Duration="0" To=".55" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="SelectionStates">
                                    <VisualState x:Name="Unselected" />
                                    <VisualState x:Name="Selected">
                                        <!--<Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="fillColor2" Storyboard.TargetProperty="Opacity" Duration="0" To=".75"/>
                                        </Storyboard>-->
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="FocusStates">
                                    <VisualState x:Name="Focused">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="FocusVisualElement" Storyboard.TargetProperty="Visibility" Duration="0">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unfocused"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Rectangle x:Name="fillColor" Opacity="0" Fill="Green" IsHitTestVisible="False" RadiusX="1" RadiusY="1"/>
                            <Rectangle x:Name="fillColor2" Opacity="0" Fill="Green" IsHitTestVisible="False" RadiusX="1" RadiusY="1"/>
                            <ContentPresenter x:Name="contentPresenter" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}"/>
                            <Rectangle x:Name="FocusVisualElement" Stroke="{TemplateBinding Foreground}" StrokeThickness="1" Visibility="Collapsed" RadiusX="1" RadiusY="1" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ListBox x:Name="TopLabels" Grid.Row="0" Grid.Column="1" BorderBrush="Transparent" ItemContainerStyle="{StaticResource IgnoreMouseOverItem}" ItemsSource="{Binding CurrentTileTypeVm.TopEdges}">
            <ListBox.ItemTemplate>
                <StaticResource ResourceKey="EdgeItemTemplate" />
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <ListBox x:Name="BottomLabels" Grid.Row="2" Grid.Column="1" BorderBrush="Transparent" ItemContainerStyle="{StaticResource IgnoreMouseOverItem}" ItemsSource="{Binding CurrentTileTypeVm.BottomEdges}">
            <ListBox.ItemTemplate>
                <StaticResource ResourceKey="EdgeItemTemplate" />
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <ListBox x:Name="LeftLabels" Grid.Row="1" Grid.Column="0"  BorderBrush="Transparent" ItemContainerStyle="{StaticResource IgnoreMouseOverItem}" ItemsSource="{Binding CurrentTileTypeVm.LeftEdges}">
            <ListBox.ItemTemplate>
                <StaticResource ResourceKey="EdgeItemTemplate" />
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <ListBox x:Name="RightLabels" Grid.Row="1" Grid.Column="2"  BorderBrush="Transparent" ItemContainerStyle="{StaticResource IgnoreMouseOverItem}" ItemsSource="{Binding CurrentTileTypeVm.RightEdges}">
            <ListBox.ItemTemplate>
                <StaticResource ResourceKey="EdgeItemTemplate" />
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <Grid Grid.Row="1" Grid.Column="1" x:Name="EditorModelDisplay">
            <ContentControl Content="{Binding CurrentEditorModel}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        </Grid>
