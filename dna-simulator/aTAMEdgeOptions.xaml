<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
	mc:Ignorable="d"
	x:Class="dna_simulator.aTAMEdgeOptions" d:DesignHeight="96">

	<Grid x:Name="EdgeOptions" Margin="6,1">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<TextBlock TextWrapping="Wrap" Text="Color:" Margin="5,5,5,5" VerticalAlignment="Center" RenderTransformOrigin="0.481,0.5" HorizontalAlignment="Center"/>
		<Rectangle Height="20" Fill="Black" Margin="5,5,5,5" Grid.Column="1" Width="20"/>
		<TextBlock x:Name="StrengthCaption" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Text="Strength:" Margin="5" Grid.Row="1"/>
		<TextBox x:Name="StrengthInput" TextWrapping="Wrap" Margin="5" Grid.Row="1" Grid.Column="1" Width="30" VerticalAlignment="Center"/>
	</Grid>
</UserControl>